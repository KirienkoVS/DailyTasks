<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="checkbox_style">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">42dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>